.services-content
  position relative
  width 100%
  height auto
  background-color red

.services-content-wrapper
  position relative
  width 100%
  height auto
  display flex
  flex-direction row
  justify-content flex-start
  align-items flex-start
  margin 4vw 0
  background-color blue

.text-wrapper
  position absolute
  width  80%
  margin-right auto
  display flex
  flex-direction row
  align-items center
  flex-grow: 1;
  transition: width 0.7s ease-out;

.text-title
  display  flex
  flex  0 1 5%
  height 20vw
  align-items center
  border-left 1px solid #fff
  border-right 1px solid #fff
  background-color rgba(0,173,223,.8)
  cursor pointer
  flex-grow: 0;
  flex-shrink: 1;
  flex-basis: auto;
  transition: all .5s;
  margin-right: 24.39%;


span.title-info
  transform rotate(90deg) scale(-1)
  font-size 18px
  font-weight bold
  color #fff

.img-wrapper
  width 100%
  display flex
  flex-direction row
  justify-content space-between
  align-items flex-start

.img-wrapper-info
  display  flex
  flex  0 1 25%
  height auto

.img-wrapper-info img
  width 100%
  height 20vw
