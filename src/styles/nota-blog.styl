.nota-blog
  width 100%
  height auto
  display flex
  flex-direction column

.banner-nota
  width 100%
  height auto

.banner-nota img
  width 100%
  height 30vw

.nota-content-wrapper
  width 100%
  height auto
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between
  align-items flex-start

.nota-text
  display flex
  flex 0 1 58%
  margin-top 1vw

.nota-text p
  font-size 20px

.nota-img-column
  display flex
  flex 0 1 40%
  flex-direction column

.nota-img-column img
  width 100%
  height 30vw

.nota-img
  margin 1vw 0

@media (max-width 768px)
  .nota-content-wrapper
    flex-direction column

  .nota-img-column
    margin 0 auto
