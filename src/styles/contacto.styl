img.social-icon
  width 50px
  height 50px

.contact-content
  width 60%
  margin-right auto
  display flex
  flex-direction row
  justify-content space-between
  background-color red

form
  width 100%
  height auto
  display flex
  flex-direction column
  background-color red

.input-section
  width 100%
  height auto
  margin-right auto
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-around
  align-items center
  background-color green

input.send-data
  width 100px
  margin-left auto

.input-section span,.input-section input
  display flex
  flex 0 1 20%
  margin 2vw 0
