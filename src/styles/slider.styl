section.slider-wrapper {
  width: 100%;
  height: 39vw;
  position: relative;
}

.touch-slider {
  width: 90%;
  height: auto;
  position: relative;
  margin: 0 auto;
}

.arrow-left,
.arrow-right {
  position: absolute;
  bottom: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 0px;
  height: 0px;
  z-index: 2;
  color #00a6d5
  font-size: 40px;
  -webkit-touch-callout: none; /* iOS Safari */
  -webkit-user-select: none;   /* Chrome/Safari/Opera */
  -khtml-user-select: none;    /* Konqueror */
  -moz-user-select: none;      /* Firefox */
  -ms-user-select: none;       /* Internet Explorer/Edge */
  user-select: none;
}

.touch-slider:hover > .arrow-left,
.touch-slider:hover > .arrow-right { opacity: 1; transition: all 0.7s ease;  }

.arrow-right{
  right: 4%;
}

.arrow-left{
  left: 2%;
}

.arrow-right:hover,.arrow-left:hover{
  color:rgb(35,39,95);
  cursor: pointer;
}

.swiper-container {
  height: 39vw;
  width: 100%;
}

.content-slide {
  color: #fff;
}

.content-slide .content-image {
  position: absolute;
  z-index: -1;
}

.swiper-slide img {
    width: 100%;
    height: 100%;
}

.pagination {
  bottom:0;
  width: 100%;
  z-index: 2;
  position: absolute;
  text-align: center;
}

.swiper-pagination-switch {
  display: inline-block;
  width: 15px;
  height: 15px;
  border-radius: 10px;
  background: #FFF;
  margin: 0 5px;
  cursor: pointer;
}

.swiper-active-switch {
  background: rgb(35,39,95);
}

.swiper-container {
  margin:0 auto;
  position:relative;
  overflow:hidden;
  -webkit-backface-visibility:hidden;
  -moz-backface-visibility:hidden;
  -ms-backface-visibility:hidden;
  -o-backface-visibility:hidden;
  backface-visibility:hidden;
  z-index:1;
}
.swiper-wrapper {
  position:relative;
  width:100%;
  -webkit-transition-property:-webkit-transform, left, top;
  -webkit-transition-duration:0s;
  -webkit-transform:translate3d(0px,0,0);
  -webkit-transition-timing-function:ease;

  -moz-transition-property:-moz-transform, left, top;
  -moz-transition-duration:0s;
  -moz-transform:translate3d(0px,0,0);
  -moz-transition-timing-function:ease;

  -o-transition-property:-o-transform, left, top;
  -o-transition-duration:0s;
  -o-transform:translate3d(0px,0,0);
  -o-transition-timing-function:ease;
  -o-transform:translate(0px,0px);

  -ms-transition-property:-ms-transform, left, top;
  -ms-transition-duration:0s;
  -ms-transform:translate3d(0px,0,0);
  -ms-transition-timing-function:ease;

  transition-property:transform, left, top;
  transition-duration:0s;
  transform:translate3d(0px,0,0);
  transition-timing-function:ease;
}
.swiper-free-mode > .swiper-wrapper {
  -webkit-transition-timing-function: ease-out;
  -moz-transition-timing-function: ease-out;
  -ms-transition-timing-function: ease-out;
  -o-transition-timing-function: ease-out;
  transition-timing-function: ease-out;
  margin: 0 auto;
}
.swiper-slide {
  float: left;
}

/* IE10 Windows Phone 8 Fixes */
.swiper-wp8-horizontal {
  -ms-touch-action: pan-y;
}
.swiper-wp8-vertical {
  -ms-touch-action: pan-x;
}

.touch-slider.bottom-slider {
    width: 100%;
    height: 20vw;
}

.swiper-container2 {
    width: 100%;
    height: 20vw;
}

@media (max-width: 768px){
  .swiper-pagination-switch {
    width: 8px;
    height: 8px;
  }

  .pagination{
    display: block;
  }

  .touch-slider {
    width: 100%;
  }
  .touch-slider .arrow-left, .touch-slider .arrow-right {
    width: 75px;
    height: 100%;
    font-size: 23px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .arrow-left, .arrow-right{
    font-size: 25px;
  }
}

@media (max-width: 480px){

  .touch-slider .arrow-left, .touch-slider .arrow-right {
    width: 20px;
    height:0;
    font-size: 23px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

}
