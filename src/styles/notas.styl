.notas-wrapper
  width 95%
  height auto
  margin 0 auto
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between
  align-items center

.notas-item
  display flex
  flex 0 1 47%
  height auto
  margin 1.5% 0
  flex-direction column
  justify-content space-around
  align-items center

.notas-item-wrapper
  width 100%
  height auto
  display flex
  flex-direction column
  padding-bottom 3.5vw
  border-bottom 1.5px solid #00a6d5

.notas-item-title
  margin 15px 0 20px 0

.notas-item-title-text
  color #23275f
  font-size 24px
  font-weight bold

span.notas-item-data-location,span.notas-item-data-data
  font-weight 200
  font-size 12px
  color gray

span.learn-more-button a
  font-size 18px
  font-weight bold

.notas-item-preview
  width 100%
  margin 0 auto
  text-align justify

.notas-item-img
  width 100%
  height 300px

.notas-item-img img
  width 100%
  height 100%

.learn-more
  width auto
  margin-left auto

@media(min-width 1680px)
  .notas-item
    flex 0 1 31%

@media(max-width 1680px)
  .notas-wrapper
    width 100%

@media(max-width 1280px)
  .notas-wrapper
    width 100%

@media(max-width 768px)
  .notas-item
    flex 0 1 95%
    margin 0 auto

  .notas-wrapper
    width 100%

  .notas-item:last-child
    padding-bottom 3vw
